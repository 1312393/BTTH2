<!DOCTYPE HTML>
<html>
<head>
    <title> <%= title %> </title>
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
</head>
<body>
<form class="form-horizontal col-xs-4 col-md-offset-4" method="post">
    <h2 class="col-md-offset-4">MAIL</h2>

    <div class="form-group">
        <label  class="col-sm-2 control-label">Sender</label>
        <div class="col-sm-8">
            <input name="email" type="email" class="form-control" value=<%=mail.sender.email%> readonly>
        </div>
    </div>
    <div class="form-group">
        <label  class="col-sm-2 control-label">Receiver</label>
        <div class="col-sm-8">
            <input name="email" type="email" class="form-control" value=<%=mail.receiver.email%> readonly>
        </div>
    </div>
    <div class="form-group">
        <label  class="col-sm-2 control-label">Title</label>
        <div class="col-sm-8">
            <input name="title" type="text" class="form-control" readonly value=<%=mail.title%>>
        </div>
    </div>
    <div class="form-group">
        <label  class="control-label col-xs-2">Message: </label>
        <div class="col-xs-8">
            <textarea name="message" class="form-control" rows="5" readonly><%=mail.message%></textarea>
        </div>
    </div>
    <a class="btn btn-success col-md-offset-4" href="/">Back</a>
</form>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"
        integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS"
        crossorigin="anonymous"></script>
</body>
</html>